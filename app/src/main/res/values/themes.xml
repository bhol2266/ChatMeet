<resources>
    <!-- Base application theme. -->
    <style name="Theme.LiveVideoChat" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/themeColorlight</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/themeColor</item>
        <item name="android:navigationBarColor">@color/themeColor</item>

        <!-- Customize your theme here. -->
    </style>
    <!-- Base application theme. -->


    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorPrimary">@color/themeColor</item>
    </style>


    <style name="fullscreenalert" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowFullscreen">true</item>
        <item name="backgroundColor">#ffffff</item>
        <item name="android:windowBackground">#ffffff</item>
        <item name="android:windowIsFloating">false</item>


    </style>

    <!--    bottomsheet dialog rounded corners-->

</resources>