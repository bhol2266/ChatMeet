<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    app:cardCornerRadius="30dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/title"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/rubrik_bold"
            android:text="Edit Nickname"
            android:alpha="0.9"
            android:textColor="@color/semiblack"
            android:textSize="24dp" />


        <androidx.cardview.widget.CardView
            android:id="@+id/nickNameCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/cardView_bg"
            app:cardCornerRadius="15dp">


            <EditText
                android:id="@+id/nickName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@null"
                android:fontFamily="@font/inter"
                android:hint="Nick name"
                android:textColor="@color/gmts_light_gray"
                android:textSize="18dp" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/infolayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/i"
                android:backgroundTint="@color/themeColor"
                android:foregroundTint="@color/themeColor"
                app:tint="@color/themeColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="Nickname should be 3 to 30 characters"
                android:textColor="@color/themeColor" />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/textareaCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
            app:cardBackgroundColor="@color/cardView_bg"
            app:cardCornerRadius="15dp">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                app:boxBackgroundMode="none"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:counterEnabled="true"
                app:counterMaxLength="200">

                <EditText
                    android:id="@+id/textArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/inter"
                    android:gravity="top"
                    android:hint="Introduce yourself~"
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:maxLength="200"
                    android:scrollbars="vertical"
                    android:textColor="@color/gmts_light_gray"
                    android:textSize="16dp" />


            </com.google.android.material.textfield.TextInputLayout>


        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/save"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/rubrik_semibold"
            android:gravity="center"
            android:text="save"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </LinearLayout>


</androidx.cardview.widget.CardView>

