<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:layout_margin="5dp"
    android:background="@drawable/vipcard_bg">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/vipcard_img1" />

    <ImageView
        android:id="@+id/discountCoupon"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/discount_sticker" />

    <androidx.cardview.widget.CardView
        android:id="@+id/tagCardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="2dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/tagTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4E8AFF"
            android:fontFamily="@font/poppins_semibold"
            android:paddingLeft="10dp"

            android:paddingRight="10dp"
            android:text="Most Valued"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/coins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/priceTagLayout"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="200 Gems"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/priceTagLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/mrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="2dp"
            android:alpha="0.7"
            android:text="$99"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_bg"
            android:paddingLeft="15dp"
            android:paddingTop="2dp"
            android:paddingRight="15dp"
            android:text="$99"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>
