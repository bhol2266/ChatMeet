<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage_bg"
    tools:context=".Fragment_HomePage">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="40dp">


        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleX="1.3"
            android:scaleY="1.3"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/gretypulse_anim"
            app:lottie_repeatCount="200"
            app:lottie_speed="1" />

        <ImageView
            android:id="@+id/group1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="15dp"
            android:src="@drawable/beforecamera_im4" />


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="320dp"
            android:src="@drawable/beforecamera_chat" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/beforecamera_telephone" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/student" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/girl1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="20dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/girl2"
            android:layout_width="60dp"

            android:layout_height="60dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="60dp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/girl3"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_marginLeft="50dp"
            android:layout_marginTop="220dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/girl4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="270dp"

            android:layout_marginTop="260dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/girl5"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="170dp"

            android:layout_marginTop="230dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/girl6"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="210dp"

            android:layout_marginTop="75dp" />


    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/onlineCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="number"
            android:text="545"
            android:textColor="@color/white"
            android:textSize="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Find your Interest Match instantly"
            android:textColor="@color/white"
            android:textSize="16dp" />


        <androidx.cardview.widget.CardView
android:id="@+id/buttonCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="10dp"
            android:elevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_bg"
                    android:gravity="center"
                    android:text="Start Talking"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/button_glare"
                    android:layout_width="580dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="-180dp"
                    android:layout_marginLeft="-580dp"
                    android:alpha="0.8"
                    android:src="@drawable/button_glare" />
            </FrameLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Find your soulmate right now!"
            android:textColor="@color/white"
            android:textSize="12dp" />

    </LinearLayout>


</FrameLayout>