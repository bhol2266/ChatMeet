<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mm_bg"
        android:orientation="vertical"
        tools:context=".PremiumMembership">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:alpha="0.8"
                android:clickable="true"
                android:focusable="true"
                android:rotation="180"
                app:srcCompat="@drawable/cross"
                app:tint="@color/white" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:orientation="horizontal"

                android:visibility="gone">

                <TextView
                    android:id="@+id/title_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:longClickable="true"
                    android:text="CamGirl Live"

                    android:textColor="@color/white"
                    android:textFontWeight="700"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/VipLottie"
                    android:layout_width="40dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/vip_icon" />
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                app:cardBackgroundColor="#80CCCCCC"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:orientation="horizontal"
                    android:paddingLeft="7dp"
                    android:paddingTop="4dp"
                    android:paddingRight="5dp">


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:paddingTop="2dp"
                        android:src="@drawable/gem" />

                    <TextView
                        android:id="@+id/coins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"

                        android:paddingBottom="4dp"
                        android:text="100"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingTop="10dp"
            app:tabIconTint="@color/gmts_light_gray"
            app:tabIndicator="@drawable/custom_tab_indicator_premium_membership"
            app:tabIndicatorColor="@color/yellow"
            app:tabIndicatorHeight="3dp"
            app:tabMaxWidth="75dp"
            app:tabMode="fixed"
            app:tabPaddingBottom="10dp"
            app:tabRippleColor="@android:color/transparent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <FrameLayout
                android:id="@+id/card1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:paddingBottom="38dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/mm_card_1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="20dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/gem" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"

                        android:text="500" />

                </LinearLayout>


                <TextView
                    android:id="@+id/card1_period_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card1"
                    android:layout_gravity="top|left"

                    android:gravity="center"

                    android:paddingLeft="10dp"
                    android:paddingTop="4dp"
                    android:text="1 Week"
                    android:textColor="@color/white"
                    android:textSize="14dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card1_price_textview"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/mm_pricebg"
                        android:gravity="center"
                        android:text="Rs200.00"
                        android:textColor="@color/yellow_dim"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/card1_Check"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/check_icon"
                        android:visibility="invisible"
                        app:tint="@color/yellow" />

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/card2"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:padding="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:paddingBottom="38dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/mm_card_2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="20dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/gem" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"

                        android:text="2000"
                        android:textColor="@color/semiblack" />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card1"
                    android:layout_gravity="top|left"

                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingTop="4dp"

                    android:text="1 Month"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card2_price_textview"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/mm_pricebg"

                        android:gravity="center"
                        android:text="Rs500.00"
                        android:textColor="@color/yellow_dim"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/card2_Check"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/check_icon"
                        android:visibility="invisible"
                        app:tint="@color/yellow" />

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/card3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:padding="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:paddingBottom="38dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/mm_card_3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="20dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/gem" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"

                        android:text="10000"
                        android:textColor="@color/white" />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card1"
                    android:layout_gravity="top|left"

                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp"
                    android:text="3 Month"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card3_price_textview"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/mm_pricebg"

                        android:gravity="center"
                        android:text="Rs2150.00"
                        android:textColor="@color/yellow_dim"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/card3_Check"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/check_icon"
                        android:visibility="invisible"
                        app:tint="@color/yellow" />

                </LinearLayout>

            </FrameLayout>


        </LinearLayout>


        <Button
            android:id="@+id/btnContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="          SUBSCRIBE          "
            android:textColor="@color/btn_brown"
            android:textSize="13dp"
            android:fontFamily="@font/poppins_bold"
            app:backgroundTint="@color/yellow" />

        <LinearLayout
            android:id="@+id/contactUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center|bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Any problems?"

                android:textColor="@color/brown"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"

                android:text="Contact us"

                android:textColor="@color/yellow"
                android:textSize="16dp" />


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:backgroundTint="@color/brown"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="5dp"
                    android:src="@drawable/right_arrow"
                    app:tint="@color/white" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <TextView
            android:id="@+id/subscriptionDetailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:text="Recurring billing, cancel anytime. By tapping Subscribe, your payment will be charged to your Google account, and your subscription will automatically renew for the same package length at the same price until you cancel on your Google account settings at least 24 hours prior to the end of the current period. By tapping Continue, you agree to our"
            android:textAlignment="center"
            android:textColor="@color/brown"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Agreement"
                android:textAlignment="center"
                android:textColor="@color/brown"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="&amp;"
                android:textAlignment="center"
                android:textColor="@color/brown"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textAlignment="center"
                android:textColor="@color/brown"
                android:textSize="14dp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#80000000"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"

            android:backgroundTint="@color/white"
            android:indeterminateTint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="processing.."
            android:textColor="@color/white"
            android:textSize="25dp" />
    </LinearLayout>


</FrameLayout>
