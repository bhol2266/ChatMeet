<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileUrl"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/student" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="Sunaina Delhi :)"
                android:textColor="@color/semiblack"
                android:textSize="18dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:elevation="0dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">


                <TextView
                    android:id="@+id/recommendationType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFDFDD"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="Nearby"
                    android:textColor="@color/themeColor"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/lastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            android:text="kya tumhe is baat se koi problem hai? kya tumhe is baat se koi problem hai?"
            android:textColor="#9E9E9E"
            android:textSize="13dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/messageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:fontFamily="@font/inter"
            android:text="06:05"
            android:textColor="@color/gmts_light_gray"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/messageCount"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="right"
            android:layout_marginTop="14dp"
            android:background="@drawable/textview_circle_background"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="24dp" />


    </LinearLayout>

</LinearLayout>