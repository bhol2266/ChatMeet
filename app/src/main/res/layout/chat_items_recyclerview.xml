<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/chatItemClick"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileUrl"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/student" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:maxWidth="150dp"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Sunaina Delhi  dafasdf asdf:)"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/lastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"

            android:text="Welcome to ChatMeet Team"
            android:textColor="@color/white"
            android:textSize="12dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/favouriteImage"
            android:layout_width="30dp"
            android:paddingLeft="10dp"
            android:layout_height="20dp"
            android:layout_gravity="right|top"
            android:src="@drawable/star_outline"
          />


        <TextView
            android:id="@+id/messageCount"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="right"
            android:layout_marginTop="14dp"
            android:background="@drawable/textview_circle_background"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />


    </LinearLayout>

</LinearLayout>