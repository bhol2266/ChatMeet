<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White color for the background -->
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp"/> <!-- Adjust radius as needed -->
        </shape>
    </item>
    <!-- Image -->
    <item android:drawable="@drawable/app_icon"/>
</layer-list>
