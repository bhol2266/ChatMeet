<!-- res/drawable/spinner_dropdown_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF0055"/> <!-- Example color for pressed state -->
        </shape>
    </item>
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FC0097"/> <!-- Example color for focused state -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FC0097"/> <!-- Your default background color -->
           <!-- Example corner radius -->
        </shape>
    </item>
</selector>
